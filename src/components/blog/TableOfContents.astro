---
// src/components/blog/TableOfContents.astro
interface Props {
  headings: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;

// Filtriamo solo H2 e H3 per non intasare l'indice
const filteredHeadings = headings.filter(h => h.depth > 1 && h.depth < 4);
---

{filteredHeadings.length > 0 && (
  <nav class="toc" aria-label="Table of contents">
    <p class="toc-title">INDEX</p>
    <ul class="toc-list">
      {filteredHeadings.map(h => (
        <li class={`toc-item depth-${h.depth}`}>
          <a href={`#${h.slug}`}>{h.text}</a>
        </li>
      ))}
    </ul>
  </nav>
)}

<style>
  .toc {
    border-left: 1px solid var(--gold-muted);
    padding-left: 1.5rem;
    margin-bottom: 3rem;
  }
  .toc-title {
    font-weight: 900;
    font-size: 0.7rem;
    letter-spacing: 0.2em;
    color: var(--gold);
    margin-bottom: 1rem;
  }
  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  .toc-item a {
    text-decoration: none;
    color: var(--white);
    font-size: 0.9rem;
    opacity: 0.6;
    transition: all 0.3s ease;
  }
  .toc-item a:hover {
    opacity: 1;
    color: var(--gold);
  }
  .depth-3 {
    padding-left: 1rem;
    font-size: 0.85rem;
  }
</style>
