---
// Footer.astro
import { getLocalizedPath, routes, type RouteKey } from '@/i18n/routes';
import { useTranslations } from '@/i18n/ui';
import type { LangCode } from '@/i18n/config';

interface Props {
  lang: LangCode;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();

function formatCopyright(text: string, year: number): string {
  return text.replace('{year}', year.toString());
}

function getCategoryUrl(lang: LangCode, categoryKey: Extract<RouteKey, `cat-${string}`>): string {
  const catSlug = routes[lang][categoryKey];
  return lang === 'en' ? `/blog/${catSlug}` : `/${lang}/blog/${catSlug}`;
}

const categories = [
  { key: 'cat-autopsia', label: t('cat-autopsia') },
  { key: 'cat-sistemi', label: t('cat-sistemi') },
  { key: 'cat-psicologia', label: t('cat-psicologia') },
  { key: 'cat-esecuzione', label: t('cat-esecuzione') },
] as const;

const legalPages = [
  { key: 'privacy', label: t('footer.privacy') },
  { key: 'cookie', label: t('footer.cookie') },
  { key: 'terms', label: t('footer.terms') },
  { key: 'security', label: t('security') },
] as const;
---

<footer class="main-footer" aria-label="Footer">
  <div class="footer-container">
    <div class="footer-grid">
      <div class="footer-section brand">
        <h2 class="footer-logo">{t('nav.logo')}</h2>
        <p class="mission-text">{t('site.description')}</p>
      </div>

      <div class="footer-section">
        <h3 class="section-heading">{t('nav.categories')}</h3>
        <nav aria-label="Categorie del blog">
          <ul class="link-list">
            {categories.map(({ key, label }) => (
              <li><a href={getCategoryUrl(lang, key)}>{label}</a></li>
            ))}
          </ul>
        </nav>
      </div>

      <div class="footer-section contact">
        <h3 class="section-heading">{t('footer.contact')}</h3>
        <a href={`mailto:${t('contact.email')}`} class="email-link">{t('contact.email')}</a>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="copyright">{formatCopyright(t('footer.copyright'), currentYear)}</p>
      <nav aria-label="Link legali">
        <ul class="legal-links">
          {legalPages.map(({ key, label }) => (
            <li><a href={getLocalizedPath(lang, key)}>{label}</a></li>
          ))}
        </ul>
      </nav>
    </div>
  </div>
</footer>

<style>
.main-footer {
  background: #000033;
  padding: 5rem 2.5rem 2rem;
  border-top: 2px solid var(--gold);
  margin-top: auto;
  color: var(--text-main);
}

.footer-container {
  max-width: 1440px;
  margin: 0 auto;
}

.footer-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 3rem;
  padding-bottom: 4rem;
}

.footer-section {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.footer-logo,
.section-heading {
  font-weight: 900;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  color: var(--gold);
  margin: 0;
  font-size: 0.85rem;
}

.footer-logo {
  font-size: 1.25rem;
}

.mission-text {
  color: var(--text-main);
  font-size: 1rem;
  line-height: 1.6;
  max-width: 320px;
}

.link-list,
.legal-links {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 0.8rem;
}

.link-list li,
.legal-links li {
  margin: 0;
}

.link-list a,
.legal-links a,
.email-link {
  color: var(--text-main);
  font-size: 1rem;
  font-weight: 700;
  text-transform: uppercase;
  text-decoration: none;
  transition: var(--transition);
  display: inline-block;
  padding: 0.25rem 0;
}

.link-list a:focus,
.legal-links a:focus,
.email-link:focus {
  outline: 2px solid var(--gold);
  outline-offset: 2px;
}

.link-list a:hover,
.legal-links a:hover,
.email-link:hover {
  color: #dfd090;
}

.email-link {
  border-bottom: 2px solid #dfd090;
  padding-bottom: 2px;
  align-self: flex-start;
}

.footer-bottom {
  border-top: 1px solid var(--gold-muted);
  padding-top: 2rem;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  gap: 1.5rem;
}

.copyright {
  font-size: 0.8rem;
  color: var(--text-muted);
  letter-spacing: 0.1em;
  margin: 0;
}

.legal-links {
  flex-direction: row;
  gap: 2rem;
}

@media (max-width: 768px) {
  .footer-grid { gap: 2.5rem; }
  .footer-bottom {
    flex-direction: column;
    align-items: flex-start;
  }
  .legal-links {
    flex-direction: column;
    gap: 0.8rem;
  }
}
</style>