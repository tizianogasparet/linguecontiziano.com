---
// Header.astro
import { getLocalizedPath } from '@/i18n/routes';
import { useTranslations } from '@/i18n/ui';
import type { LangCode } from '@/i18n/config';

import CategoryDropdown from '@/components/navigation/CategoryDropdown.astro';
import LanguageSwitcher from '@/components/navigation/LanguageSwitcher.astro';
import Search from '@/components/search/Search.astro';

interface Props { lang: LangCode; }
const { lang } = Astro.props;
const t = useTranslations(lang);
---

<header class="main-header">
  <div class="header-container">
    <a href={getLocalizedPath(lang, 'home')} class="logo">
      {t('nav.logo')}
    </a>

    <nav class="desktop-nav">
      <ul class="nav-list">
        <li><a href={getLocalizedPath(lang, 'home')} class="nav-link">{t('nav.home')}</a></li>
        <li><CategoryDropdown lang={lang} /></li>
        <li><a href={getLocalizedPath(lang, 'blog')} class="nav-link">{t('nav.blog')}</a></li>
      </ul>
    </nav>

    <div class="header-actions">
      <LanguageSwitcher lang={lang} />
      <div class="divider"></div>
      <Search lang={lang} />
    </div>
  </div>
</header>

<style>
  .main-header {
    height: var(--nav-height);
    background-color: var(--bg-monolith);
    border-bottom: 2px solid var(--gold);
    display: flex;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .header-container {
    width: 100%;
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 2.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    color: var(--gold);
    font-weight: 900;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    font-size: 1.25rem;
    text-decoration: none;
    transition: var(--transition);
    white-space: nowrap;
  }

  .logo:hover { color: var(--gold-deep); }

  .desktop-nav { display: block; }
  .nav-list { display: flex; gap: 3rem; align-items: center; list-style: none; }

  .nav-link {
    color: var(--text-main);
    font-size: 0.9rem;
    font-weight: 800;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    transition: var(--transition);
    white-space: nowrap;
  }
  .nav-link:hover { color: var(--gold); }

  .header-actions { display: flex; align-items: center; gap: 1.5rem; }
  .divider { width: 1px; height: 25px; background-color: var(--gold-muted); }

  @media (max-width: 1023px) {
    .main-header { display: none; }
  }
</style>