---
// HeaderDesktop.astro
import { getLocalizedPath } from '@/i18n/routes';
import { useTranslations } from '@/i18n/ui';
import type { LangCode } from '@/i18n/config';

import CategoryDropdown from '@/components/navigation/CategoryDropdown.astro';
import LanguageSwitcher from '@/components/navigation/LanguageSwitcher.astro';

interface Props { lang: LangCode; }
const { lang } = Astro.props;
const t = useTranslations(lang);
---

<header class="header-desktop">
  <div class="header-container">
    <a href={getLocalizedPath(lang, 'home')} class="logo">
      {t('nav.logo')}
    </a>

    <nav class="main-nav">
      <ul class="nav-list">
        <li><CategoryDropdown lang={lang} /></li>
        <li><a href={getLocalizedPath(lang, 'blog')} class="nav-link">{t('nav.blog')}</a></li>
      </ul>
    </nav>

    <div class="header-actions">
      <LanguageSwitcher lang={lang} />
      <div class="divider"></div>
    </div>
  </div>
</header>

<style>
.header-desktop {
  position: sticky;
  top: 0;
  z-index: 1000;
}

.header-container {
  background-color: var(--bg-monolith);
  border-bottom: 2px solid var(--gold);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 2.5rem;
  height: var(--nav-height);
}

.logo {
  color: var(--gold);
  font-weight: 900;
  letter-spacing: 0.3em;
  text-transform: uppercase;
  font-size: 1.25rem;
  text-decoration: none;
  transition: var(--transition);
  white-space: nowrap;
}

.logo:hover { color: var(--gold-deep); }

.main-nav {
  display: block;
}

.nav-list {
  display: flex;
  gap: 2.5rem;
  align-items: center;
  list-style: none;
}

.nav-link {
  color: var(--text-main);
  font-size: 0.9rem;
  font-weight: 800;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  transition: var(--transition);
  white-space: nowrap;
}

.nav-link:hover { color: var(--gold); }

.header-actions {
  display: flex;
  align-items: center;
  gap: 1.5rem;
}

.divider {
  width: 1px;
  height: 25px;
  background-color: var(--gold-muted);
}
</style>