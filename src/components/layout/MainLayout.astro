---
// MainLayout.astro
import '../../styles/global.css';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import { useTranslations } from '@/i18n/ui';
import { languages, defaultLang, type LangCode } from '@/i18n/config';

interface Props {
  lang?: LangCode;         // Lingua corrente, opzionale
  title?: string;          // Titolo pagina
  description?: string;    // Meta description
  isLegal?: boolean;       // Per il noindex su pagine legal
}

// Props destrutturati con fallback
const { lang = defaultLang, title, description, isLegal = false } = Astro.props;

// Traduzioni
const t = useTranslations(lang);

// Meta tag
const metaTitle = title ? `${title} | Tiziano Gasparet` : t('site.title');
const metaDescription = description ?? t('site.description');

// Direzione lingua (ltr/rtl)
const htmlDir = languages[lang]?.dir ?? 'ltr';
---

<!DOCTYPE html>
<html lang={lang} dir={htmlDir}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    {isLegal && <meta name="robots" content="noindex, follow" />}
    
    <title>{metaTitle}</title>
    <meta name="description" content={metaDescription} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <slot name="head" />
  </head>
  <body>
    <Header lang={lang} />

    <main class="monolith-container">
      <slot />
    </main>

    <Footer lang={lang} />
  </body>
</html>

<style>
  .monolith-container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    padding: 0;
    margin: 0;
    background-color: #000020;
    color: #ffffff;
    font-family: 'Inter', sans-serif;
  }
</style>
