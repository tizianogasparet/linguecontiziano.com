---
import '@/styles/global.css';
import HeaderDesktop from '@/components/layout/HeaderDesktop.astro';
import HeaderMobile from '@/components/layout/HeaderMobile.astro';
import Footer from '@/components/layout/Footer.astro';
import { languages, defaultLang, type LangCode } from '@/i18n/config';

interface Props {
  title: string;
  description?: string;
  lang?: LangCode;
}

const { title, description, lang = defaultLang } = Astro.props;
const htmlDir = languages[lang]?.dir ?? 'ltr';
---

<!DOCTYPE html>
<html lang={lang} dir={htmlDir}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <meta name="generator" content={Astro.generator} />
    <slot name="head" />
  </head>
  <body>
    <div class="desktop-only">
      <HeaderDesktop lang={lang} />
    </div>
    <div class="mobile-only">
      <HeaderMobile lang={lang} />
    </div>
    <main id="main-content">
      <div class="monolith-container">
        <slot />
      </div>
    </main>
    <Footer lang={lang} />
  </body>
</html>