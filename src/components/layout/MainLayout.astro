---
import '../../styles/global.css';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import { useTranslations } from '../../i18n/ui';
import { languageAttributes, defaultLang, type LangCode } from '../../i18n/config';

interface Props {
  lang: LangCode;
  title?: string;
  description?: string;
  isLegal?: boolean; // Prop per il noindex
}

const { lang = defaultLang, title, description, isLegal = false } = Astro.props;
const t = useTranslations(lang);

const metaTitle = title ? `${title} | Tiziano Gasparet` : t('site.title');
const metaDescription = description ?? t('site.description');
const attr = languageAttributes[lang] || languageAttributes[defaultLang];
---

<!DOCTYPE html>
<html lang={attr.lang} dir={attr.dir}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    {isLegal && <meta name="robots" content="noindex, follow" />}
    
    <title>{metaTitle}</title>
    <meta name="description" content={metaDescription} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <slot name="head" />
  </head>
  <body>
    <Header lang={lang} />
    
    <main class="monolith-container">
      <slot />
    </main>

    <Footer lang={lang} />
  </body>
</html>