---
interface Crumb {
  label: string;
  href?: string;
}

interface Props {
  crumbs: Crumb[];
}

const { crumbs = [] } = Astro.props;
---
<nav aria-label="Breadcrumb" class="breadcrumb">
  <ol>
    {crumbs.map((crumb, index) => (
      <li>
        {crumb.href ? (
          <a href={crumb.href}>{crumb.label}</a>
        ) : (
          <span class="current" aria-current="page">{crumb.label}</span>
        )}
        {index < crumbs.length - 1 && <span class="separator">/</span>}
      </li>
    ))}
  </ol>
</nav>

<style>
  .breadcrumb ol {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
    align-items: center;
  }

  li {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    font-size: 0.8rem;
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 0.05em;
  }

  a {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: 0.2s;
  }

  a:hover { color: #dfd090; }

  .current { color: #dfd090; }

  .separator {
    color: rgba(223, 208, 144, 0.4);
    font-weight: 400;
  }
</style>