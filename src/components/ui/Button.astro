---
// src/components/ui/Button.astro
interface Props {
  href?: string;
  type?: 'button' | 'submit';
  class?: string;
}

const { href, type = 'button', class: cls = '' } = Astro.props;
---
{href ? (
  <a href={href} class={`btn ${cls}`} role="button">
    <slot />
  </a>
) : (
  <button type={type} class={`btn ${cls}`}>
    <slot />
  </button>
)}
