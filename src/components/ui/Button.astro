---
interface Props {
  href?: string;
  type?: 'button' | 'submit';
  variant?: 'primary' | 'outline';
  class?: string;
}

const { 
  href, 
  type = 'button', 
  variant = 'primary', 
  class: className = '' 
} = Astro.props;

const baseClass = "btn-base";
const variantClass = variant === 'primary' ? "btn-primary" : "btn-outline";
---

{href ? (
  <a href={href} class:list={[baseClass, variantClass, className]} role="button">
    <slot />
  </a>
) : (
  <button type={type} class:list={[baseClass, variantClass, className]}>
    <slot />
  </button>
)}

<style>
  .btn-base {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2.5rem;
    font-size: 0.9rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.19, 1, 0.22, 1);
    text-decoration: none;
    border: 2px solid #dfd090;
    position: relative;
    overflow: hidden;
  }

  /* Variante Piena */
  .btn-primary {
    background: #dfd090;
    color: #000033;
  }

  .btn-primary:hover {
    background: transparent;
    color: #dfd090;
  }

  /* Variante Outline */
  .btn-outline {
    background: transparent;
    color: #dfd090;
  }

  .btn-outline:hover {
    background: #dfd090;
    color: #000033;
  }

  /* Effetto pressione */
  .btn-base:active {
    transform: scale(0.96);
  }
</style>