---
import MainLayout from '@/components/layout/MainLayout.astro';
import { useTranslations } from '@/i18n/ui';
import { defaultLang } from '@/i18n/config';

const t = useTranslations(defaultLang);
---
<MainLayout title="404" lang={defaultLang}>
  <div class="monolith-container" style="text-align: center; padding: 10rem 0;">
    <h1 style="font-size: 5rem; color: var(--gold);">404</h1>
    <p>{t('error.404.title')}</p>
    <a href="/" style="color: var(--gold); text-decoration: underline;">HOME</a>
  </div>
</MainLayout>