---
import MainLayout from '@/components/layout/MainLayout.astro';
import { useTranslations } from '@/i18n/ui';
import { defaultLang, languages, type LangCode } from '@/i18n/config';
import { getLocalizedPath } from '@/i18n/routes';

// Rilevamento lingua dall'URL in modo robusto
const { pathname } = Astro.url;
const segments = pathname.split('/').filter(Boolean);
const firstSegment = segments[0] || '';

const supportedCodes = Object.keys(languages) as LangCode[];
const lang: LangCode = supportedCodes.includes(firstSegment as LangCode)
  ? (firstSegment as LangCode)
  : defaultLang;

const t = useTranslations(lang);
const homeLink = getLocalizedPath(lang, 'home');
---

<MainLayout
  lang={lang}
  title={`404 | ${t('site.title')}`}
  description={t('error.404.title')}
>
  <div class="error-wrapper">
    <div class="error-content">
      <div class="error-code">404</div>
      <h1 class="error-message">{t('error.404.title')}</h1>
      <div class="monolith-divider"></div>
      <a href={homeLink} class="back-link">
        {t('error.404.back')} <span class="arrow">→</span>
      </a>
    </div>
  </div>
</MainLayout>

<style>
  .error-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    width: 100%;
    background-color: var(--bg-monolith); /* pieno nero o colore base */
    padding: 2rem;
    box-sizing: border-box;
  }

  .error-content {
    text-align: center;
    max-width: 600px;
    width: 100%;
    margin: 0 auto;
  }

  .error-code {
    font-family: var(--font-mono);
    font-size: clamp(6rem, 20vw, 14rem);
    font-weight: 900;
    color: var(--gold);
    line-height: 1;
    letter-spacing: -0.05em;
    margin: 0;
    padding: 0;
    /* Nessuna opacità, nessun effetto trasparente */
  }

  .error-message {
    font-family: var(--font-sans);
    font-weight: 900;
    text-transform: uppercase;
    font-size: clamp(1.1rem, 3.5vw, 1.8rem);
    color: var(--text-main);
    margin: 1.2rem 0 2.5rem;
    letter-spacing: 0.15em;
    line-height: 1.3;
  }

  .monolith-divider {
    height: 2px;
    background: var(--gold);
    width: 60px;
    margin: 2rem auto;
    position: relative;
  }

  .monolith-divider::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 10px;
    height: 10px;
    background: var(--bg-monolith);
    border: 2px solid var(--gold);
    border-radius: 50%;
  }

  .back-link {
    display: inline-block;
    color: var(--gold);
    text-decoration: none;
    font-family: var(--font-sans);
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.9rem;
    padding: 0.9rem 2rem;
    border: 1px solid var(--gold);
    transition: all 0.3s ease;
    background: transparent;
  }

  .back-link:hover {
    background-color: var(--gold);
    color: var(--bg-monolith);
    border-color: var(--gold);
  }

  .arrow {
    display: inline-block;
    margin-left: 0.5em;
    transition: transform 0.3s ease;
  }

  .back-link:hover .arrow {
    transform: translateX(6px);
  }

  /* Nessuna animazione glitch o opacità — stile monolitico pulito */
</style>